#
# SMF Startup script for vm-agent
#

set -o xtrace

. /lib/svc/share/smf_include.sh
. /lib/sdc/config.sh


# vm-agent logadm configuration
mkdir -p -m 0755 /var/log/vm-agent
logadm -w vm_agent_logs -C 168 -S 1g -c -p 1h \
    -t '/var/log/vm-agent/vm-agent_$nodename_%FT%H:%M:%S.log' \
    /var/svc/log/*vm-agent*.log


case "$1" in
'start')
    /usr/bin/ctrun -l child -o noorphan @@ROOT@@/node/bin/node --abort_on_uncaught_exception @@ROOT@@/bin/vm-agent &
    ;;

'stop')
    echo "'stop' not yet supported" >&2
    exit $SMF_EXIT_ERR_FATAL
    ;;

*)
    echo "Usage: $0 { start | stop }"
    exit $SMF_EXIT_ERR_FATAL
    ;;
esac
exit $SMF_EXIT_OK
